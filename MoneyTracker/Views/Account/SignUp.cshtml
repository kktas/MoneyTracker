@using MoneyTracker.ViewModels.AccountVM;

@model SignUpPageVM
@{
    ViewData["Title"] = "Kaydol";
    Layout = "../Shared/_Layout";
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ConfirmationPassword"></label>
                <input asp-for="ConfirmationPassword" class="form-control" />
                <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydol</button>
        </form>
    </div>
</div>

